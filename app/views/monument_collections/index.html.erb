<h1>Monument Collections</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @monument_collections.each do |m_c| %>
      <tr>
        <td><%= m_c.name %></td>
        <td><%= link_to 'Show', m_c %></td>
        <td><%= link_to 'Edit', edit_user_path(m_c) %></td>
        <td><%= link_to 'Destroy', m_c, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Monument Collection', new_monument_collection_path %>
<strong>Pictures</strong>
<table class="table">
	<thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Date</th>
      <th>Image</th>
    </tr>
  </thead>
  <tbody>
    <% @monument.pictures.each do |picture| %>
      <tr>
        <td><%= picture.name %></td>
        <td><%= picture.description %></td>
        <td><%= picture.date %></td>
        <% unless picture.image.thumb.url.nil? %>
          <td><%= image_tag picture.image.thumb.url %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<h1>Monuments</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @monuments.each do |monument| %>
      <tr>
        <td><%= monument.name %></td>
        <td><%= link_to 'Show', monument %></td>
        <td><%= link_to 'Edit', edit_monument_path(monument) %></td>
        <td><%= link_to 'Destroy', monument, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '<span class="glyphicon glyphicon-plus" aria-hidden="true"></span>'.html_safe , new_monument_path, class: 'btn btn-default pull-right', title: 'Create new monument' %>
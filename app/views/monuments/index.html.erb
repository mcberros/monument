<h1>Monuments</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @monuments.each do |monument| %>
      <tr>
        <td><%= monument.name %></td>
        <td><%= link_to 'Show', monument %></td>
        <td><%= link_to '<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>'.html_safe , edit_monument_path(monument), title: 'Edit monument' %></td>
        <td><%= link_to '<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>'.html_safe , monument, method: :delete, title: 'Delete monument', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '<span class="glyphicon glyphicon-plus" aria-hidden="true"></span>'.html_safe , new_monument_path, class: 'btn btn-default pull-right', title: 'Create new monument' %>

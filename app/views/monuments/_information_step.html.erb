<h2>Monument Information</h2>
<div class="form-group">
  <%= f.label :name %><br>
  <%= f.text_field :name, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :description %><br>
  <%= f.text_field :description, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :monument_collection %><br>
  <%= f.collection_select(:monument_collection_id, MonumentCollection.where(user_id: current_user.id), :id, :name, {}, {:class=>'form-control'}) %>
</div>
<% unless Category.where(user_id: current_user.id).nil? %>
  <div class="form-group">
    <%= f.label :category %><br>
    <%= f.collection_select(:category_id, Category.where(user_id: current_user.id), :id, :name, {}, {:class=>'form-control'}) %>
  </div>
<% end %>
<div class="checkbox">
  <%= f.check_box :public %>
  <%= f.label :public %>
</div>